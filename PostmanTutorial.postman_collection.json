{
	"info": {
		"_postman_id": "af1ec4cb-0127-4c2d-b6d2-16e444e9ce5a",
		"name": "Postman Tutorial",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "GET with URL Params",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "35fe2c80-d1af-4c95-8aa7-21a998ff6633",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"let jsonData = pm.response.json();",
							"",
							"//console.log(jsonData.args.isGood);",
							"//console.log(typeof jsonData.args.isGood);",
							"//console.log(pm.response.headers.get('Cache-Control'))",
							"//console.log(pm.response)",
							"",
							"pm.test(\"Check value of isGood and isBad\", function () {",
							"    pm.expect(jsonData.args.isGood).to.eql('true');",
							"    pm.expect(jsonData.args.isBad).to.eql('false');",
							"});",
							"",
							"pm.test(\"Cache-Control is present\", function () {",
							"    pm.expect(pm.response.headers.get('Cache-Control'));",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": ""
				},
				"url": {
					"raw": "http://httpbin.org/get?isGood=true&isBad=false",
					"protocol": "http",
					"host": [
						"httpbin",
						"org"
					],
					"path": [
						"get"
					],
					"query": [
						{
							"key": "isGood",
							"value": "true"
						},
						{
							"key": "isBad",
							"value": "false"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "POST with Values",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "d1652d16-2a88-4cd7-afb5-74541c6acbca",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Check global variable currentDate\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.json.currentDate).to.eql(pm.globals.get(\"currentDate\"));",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"name": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n\t\"name\": \"john\",\n\t\"permissions\": [2000,3000,4000],\n\t\"currentDate\": {{currentDate}}\n}"
				},
				"url": {
					"raw": "http://httpbin.org/post",
					"protocol": "http",
					"host": [
						"httpbin",
						"org"
					],
					"path": [
						"post"
					]
				}
			},
			"response": []
		}
	]
}